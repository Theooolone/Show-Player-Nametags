{
	"schemaVersion": 1,
	"id": "show-player-nametags",
	"version": "${version}",
	"name": "Show Player Nametags",
	"description": "Shows the nametags of players with the HUD hidden",
	"authors": [
		"Theooolone"
	],
	"license": "MIT",
	"icon": "assets/show-player-nametags/icon.png",
	"environment": "*",
	"entrypoints": {
		"client": [
			"theooolone.showplrnametags.ShowPlayerNametags"
		],
		"modmenu": [
			{
				"adapter": "default",
				"value": "theooolone.showplrnametags.ModMenuCompatibility"
			}
		]
	},
	"mixins": [
		"show-player-nametags.mixins.json"
	],
	"depends": {
		"fabricloader": ">=0.16.14",
		"minecraft": ">=1.21.2",
		"java": ">=21",
		"fabric-api": "*",
		"cloth-config": "*"
	},
	"suggests": {
		"mod-menu": "*"
	}
}